@model SIA102_Midterms_2.DTOs.AuthorReadDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this author?</h3>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.AuLname</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.AuFname</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>

        <dt class="col-sm-2">Zip</dt>
        <dd class="col-sm-10">@Model.Zip</dd>

        <dt class="col-sm-2">Contract</dt>
        <dd class="col-sm-10">@Model.Contract</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AuId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
