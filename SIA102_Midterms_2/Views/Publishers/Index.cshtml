@model IEnumerable<SIA102_Midterms_2.DTOs.PublisherReadDTO>

@{
    ViewData["Title"] = "Publishers";
}

<h1>Publishers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().PubId)</th>
            <th>@Html.DisplayNameFor(model => model.First().PubName)</th>
            <th>@Html.DisplayNameFor(model => model.First().City)</th>
            <th>@Html.DisplayNameFor(model => model.First().State)</th>
            <th>@Html.DisplayNameFor(model => model.First().Country)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PubId</td>
                <td>@item.PubName</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.Country</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PubId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PubId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PubId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
